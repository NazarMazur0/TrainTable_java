<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:background="#484F60">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:text="Номер \n поїзда"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/code" android:layout_weight="1"
                android:textColor="#FFF6F6" android:textSize="13sp"/>
        <TextView
                android:text="Місто \n відправлення"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/start" android:layout_weight="1"
                android:textColor="#FFF6F6" android:textAlignment="center" android:textSize="13sp"/>
        <TextView
                android:text="Час\n відправлення"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/startTime" android:layout_weight="1"
                android:textColor="#FFF6F6" android:textAlignment="center" android:textSize="13sp"/>
        <TextView
                android:text="Місто\nприбуття"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/end" android:layout_weight="1"
                android:textColor="#FFF6F6" android:textAlignment="center" android:textSize="13sp"/>
        <TextView
                android:text="Час\n прибуття"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/endTime" android:layout_weight="1"
                android:textColor="#FFF6F6" android:textAlignment="center" android:textSize="13sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>