<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:background="#AAB8C8">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="1dp" android:background="@drawable/recycler_style">
        <TextView
                android:text="Місто \n відправлення"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/city" android:layout_weight="1"
                android:textColor="@color/black" android:textAlignment="center" android:textSize="13sp"/>
        <TextView
                android:text="Час\n відправлення"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/arrivalTime" android:layout_weight="1"
                android:textColor="@color/black" android:textAlignment="center" android:textSize="13sp"/>
        <TextView
                android:text="Час\n відправлення"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/departmentTime" android:layout_weight="1"
                android:textColor="@color/black" android:textAlignment="center" android:textSize="13sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>