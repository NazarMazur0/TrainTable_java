<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/recycler_style"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:textAlignment="center">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LinearLayout"
            android:layout_marginStart="1dp">
        <TextView
                android:text="Номер \n поїзда"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/code" android:layout_weight="1"
                android:textColor="@color/black" android:textSize="13sp" android:textAlignment="center"/>
        <TextView
                android:text="Місто \n відправлення"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/departmentCity" android:layout_weight="1"
                android:textColor="@color/black" android:textAlignment="center" android:textSize="13sp"/>
        <TextView
                android:text="Час\n відправлення"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:textColor="@color/black" android:textAlignment="center" android:textSize="13sp"
                android:id="@+id/departmentTime"/>
        <TextView
                android:text="Місто\nприбуття"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:textColor="@color/black" android:textAlignment="center" android:textSize="13sp"
                android:id="@+id/arrivalCity"/>
        <TextView
                android:text="Час\n прибуття"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_weight="1"
                android:textColor="@color/black" android:textAlignment="center" android:textSize="13sp"
                android:id="@+id/arrivalTime"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/periodic" android:layout_weight="1"
                android:textColor="#504949" android:paddingStart="10dp"/>
    </LinearLayout>
</LinearLayout>